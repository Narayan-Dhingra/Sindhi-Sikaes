<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="list_title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/list_title</item>
</style>

    <style name="list_ic">
        <item name="android:layout_width">@dimen/play_icon_size</item>
        <item name="android:layout_height">@dimen/play_icon_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:src">@drawable/ic_play_sound</item>
    </style>

    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_play_sound</item>
    </style>

</resources>




